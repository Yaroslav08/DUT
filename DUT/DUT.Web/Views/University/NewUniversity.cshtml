@model DUT.Application.ViewModels.University.UniversityCreateModel

@{
    ViewData["Title"] = "NewUniversity";
}

<h1>NewUniversity</h1>

<h4>UniversityCreateModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="University" asp-action="CreateUniversity" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShortName" class="control-label"></label>
                <input asp-for="ShortName" class="form-control" />
                <span asp-validation-for="ShortName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NameEng" class="control-label"></label>
                <input asp-for="NameEng" class="form-control" />
                <span asp-validation-for="NameEng" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShortNameEng" class="control-label"></label>
                <input asp-for="ShortNameEng" class="form-control" />
                <span asp-validation-for="ShortNameEng" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
