@model DUT.Application.ViewModels.Faculty.FacultyCreateModel

@{
    ViewData["Title"] = "CreateFaculty";
}

<h1>CreateFaculty</h1>

<h4>FacultyCreateModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Faculty" asp-action="CreateFaculty" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Faculty" asp-action="GetAllFaculties">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
